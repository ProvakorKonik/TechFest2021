<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginProfile">


    <TextView
        android:id="@+id/profile_head_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="My Information"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/profile_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_head_text"
        tools:srcCompat="@tools:sample/avatars">

        <ImageView
            android:id="@+id/profile_picture"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="#ffddcc"
            />
    </androidx.cardview.widget.CardView>
    

    <TextView
        android:id="@+id/profile_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:text="Name"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/profile_card"
        app:layout_constraintTop_toTopOf="@+id/profile_card" />

    <TextView
        android:id="@+id/profile_university_name_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="16dp"
        android:text="Address"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/profile_name_text"
        app:layout_constraintTop_toBottomOf="@+id/profile_name_text" />

    <TextView
        android:id="@+id/profile_user_type_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="User Type"
        app:layout_constraintStart_toStartOf="@+id/profile_university_name_text"
        app:layout_constraintTop_toBottomOf="@+id/profile_university_name_text" />


    <Button
        android:id="@+id/go_premiumbtn"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="Go Premium"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.563"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_sign_out_btn" />

    <Button
        android:id="@+id/go_edit_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:text="Edit Profile"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.563"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/go_premiumbtn" />

    <Button
        android:id="@+id/profile_sign_out_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Sign Out"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/profile_user_type_text"
        app:layout_constraintTop_toBottomOf="@+id/profile_user_type_text" />

    <Button
        android:id="@+id/profile_sale_product_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="5dp"
        android:text="Sale Product"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/profile_verify_list_btn"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="@+id/profile_verify_list_btn"
        app:layout_constraintTop_toBottomOf="@+id/profile_verify_list_btn" />

    <Button
        android:id="@+id/profile_verify_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"

        android:text="Verify Account"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/go_edit_profile" />

    <Button
        android:id="@+id/profile_verify_list_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="5dp"
        android:text="Verify List"
        android:textSize="12sp"
        
        app:layout_constraintEnd_toEndOf="@+id/profile_verify_btn"
        app:layout_constraintStart_toStartOf="@+id/profile_verify_btn"
        app:layout_constraintTop_toBottomOf="@+id/profile_verify_btn" />

    <TextView
        android:id="@+id/text_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="26"
        android:textStyle="bold"
        android:textColor="@color/app_orange_deep"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="@+id/profile_card"
        app:layout_constraintTop_toBottomOf="@+id/profile_card" />

    <TextView
        android:id="@+id/textView66"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="points"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_points"
        app:layout_constraintStart_toEndOf="@+id/text_points"
        />

</androidx.constraintlayout.widget.ConstraintLayout>